{{!
    @template local_excursions/activityform_studentlist_rows

    View for the student list rows.
}}
{{#students}}
    <tr class="student">
        <td class="cell c-checkbox">
            <input class="userselect" type="checkbox" value="{{username}}">
        </td>
        <td class="cell c-name">
            <img src="{{profilephoto}}" class="round" role="presentation" aria-hidden="true"> <span class="name">{{fullnamereverse}}</span>
            {{^uptodate}} 
                <i data-toggle="tooltip" title="{{#str}}studentinlistnotuptodate, local_excursions{{/str}}" class="fa fa-info-circle text-info" aria-hidden="true"></i>
            {{/uptodate}}
            {{^sisconsent}} 
                <i data-toggle="tooltip" title="{{#str}}nosisconsent, local_excursions{{/str}}" class="fa fa-exclamation-triangle text-danger" aria-hidden="true"></i>
            {{/sisconsent}}
        </td>
        {{#permissions.0}}          
            <td class="cell c-permissions">
                {{#permissions}}<span class="parent-permission" data-response="{{response}}"><img src="{{profilephoto}}" class="round" role="presentation" aria-hidden="true" alt="{{fullname}}" title="{{fullname}}"> {{fullname}}</span>{{/permissions}}
            </td>
        {{/permissions.0}}
        {{^permissions.0}}  
            <td class="cell c-permissions no-permissions"></td>
        {{/permissions.0}}  
    </tr> 
{{/students}}