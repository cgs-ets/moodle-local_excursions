{{!
    @template local_excursions/summary

    Printable slip with activity details.
}}
<div id="activity-summary">
    <b>Activity Name:</b> {{activityname}}<br>
    <b>Location:</b> {{location}}<br>
    <b>Start:</b> {{startreadabletime}}<br>
    <b>End:</b> {{endreadabletime}}<br>
    <b>Details:</b> {{{htmlnotes}}}<br>
    <b>Transport:</b> {{transport}}<br>
    {{#cost}}<b>Cost:</b> {{cost}}<br>{{/cost}}
    <b>Staff in charge:</b> {{staffinchargeinfo.fullname}}<br>
    <b>Number of students:</b> {{numstudents}}<br>

    <p><a href="{{manageurl}}" target="_blank" class="screenonly">Additional information (for staff only)</a></p>

    <a href="#" class="print" onclick="window.print();return false;">Click here to print</a>
</div>