{{!
    @template local_excursions/activityform_studentlist_permissionsform

    View for the student list component.
}}

<div class="permissions-form">
    {{! 
        How to invite?
    }}
    <div id="fitem_id_invitetype" class="form-group row fitem">
        <div class="col-md-3">
            <label class="col-form-label d-inline " for="id_invitetype">
                Invite type
            </label>
        </div>
        <div class="col-md-9 form-inline felement" data-fieldtype="text">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="invitetype" id="invitetypesystem" value="system" {{#permissionshelper.issystem}}checked="checked"{{/permissionshelper.issystem}}>
                <label class="form-check-label" for="invitetypesystem">
                    System-generated
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="invitetype" id="invitetypemanual" value="manual" {{#permissionshelper.ismanual}}checked="checked"{{/permissionshelper.ismanual}}>
                <label class="form-check-label" for="invitetypemanual">
                    Manual
                </label>
            </div>
        </div>
        <div class="alert alert-warning invitetype-message" data-type="manual" {{#permissionshelper.ismanual}}style="display:block;"{{/permissionshelper.ismanual}}>
            {{#str}}invitetypemanual, local_excursions{{/str}}
            <pre>{{config.wwwroot}}/local/excursions/permissions.php?activityid={{id}}</pre>
        </div>
    </div>


    {{!
        Limit
    }}
    <div id="fitem_id_limit" class="form-group row  fitem   ">
        <div class="col-md-3">
            <label class="col-form-label d-inline " for="id_limit">
                Limit
                <br>
                <small>0 is unlimited</small>
            </label>
        </div>
        <div class="col-md-9 form-inline felement" data-fieldtype="text">
            <input type="number" class="form-control " name="limit" id="id_limit" value="{{permissionslimit}}" size="48">
            <div class="form-control-feedback invalid-feedback" id="id_error_limit">
            </div>
        </div>
    </div>

    {{!
        Due by
    }}
    <div id="fitem_id_dueby" class="form-group row fitem" data-groupname="dueby">
        <div class="col-md-3">
            <label class="col-form-label d-inline " for="id_dueby">
                Due by
                <br>
                <small>Default is activity start</small>
            </label>
        </div>
        <div class="col-md-9 form-inline felement" data-fieldtype="xdate_time_selector">
            {{{duebydatefield}}}
        </div>
    </div>

</div>