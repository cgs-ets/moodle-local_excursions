{{!
    @template local_excursions/search

    View template.
}}

<div class="local_excursions">

    <a href="{{indexurl}}">‚Üê Back to all activities</a><br><br>

    <form class="search-wrap" action="/local/excursions/search.php" method="get">
      <input name="q" class="search" value="{{q}}">
      <button class="btn btn-primary">Go</button>
    </form>
    <br><br>
   
    {{^activities}}
     No activities found...
    {{/activities}}

    {{#activities.0}}
      <div class="list-activities selected">
        <table class="table generaltable">
            {{>local_excursions/index_activities_head}}
            <tbody>
                {{#activities}}
                    {{>local_excursions/index_activity}}
                {{/activities}}
            </tbody>
        </table>
      </div>
    {{/activities.0}}

</div>