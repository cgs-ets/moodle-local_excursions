{{!
    @template local_excursions/activityform_studentlist_messagehistory

    View for the student list component.
}}
{{#messagehistory.0}}
    <h5>Email history</h5>
    <table class="table generaltable">
        <thead>
            <tr>
                <th>Time</th>
                <th>Sender</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#messagehistory}}
                <tr class="emailaction">
                    <td>{{readabletime}}</td>
                    <td>{{sender}}</td>
                    <td style="display: none;" class="c-students">
                        {{#students}}<span>{{.}}; </span>{{/students}}
                    </td>
                    <td style="display: none;" class="c-extratext">{{extratext}}</td>
                    <td class="c-actions">
                        <a href="#" class="btn-showextratext"><i class="fa fa-align-left" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {{/messagehistory}}
        </tbody>
    </table>
    <p class="reminder-alert alert alert-warning">To send a reminder, select relevant students and click <b><i class="fa fa-envelope" aria-hidden="true"></i> Prepare message</b></p>
{{/messagehistory.0}}