{{!
    @template local_excursions/activityform_approvals_comments

    View for the approvals section of the activity form.
}}
{{#comments}}
    <div class="box">
        {{#isauthor}}<a href="#" class="delete-comment" data-id="{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>{{/isauthor}}
        <span class="comment-time">{{readabletime}}</span>
        <img class="round" src="{{userphoto}}" title="{{userfullname}}">
        {{comment}}
    </div>
{{/comments}}