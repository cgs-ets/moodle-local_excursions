{{!
    @template local_excursions/activityform_atts

    View for the medical report component.
}}
<div class="attachments row form-group">
    <div class="col-md-3">
        <label class="col-form-label d-inline">
            {{#str}}activityform:attachments, local_excursions{{/str}}
        </label>
    </div>
    <div class="col-md-9">
        <div class="contents">
            <div class="attachments-list">
                <ul>
                    {{#files}}
                        <li>
                            <a href="{{path}}" target="_blank">
                                {{{iconimage}}} {{formattedfilename}}
                            </a>
                        </li>
                    {{/files}}
                    {{^files.0}} No files attached. {{/files.0}}
                </ul>
            </div>
        </div>
    </div>
</div>