{{!
    @template local_excursions/activityform_approvals_workflow

    View for the approvals section of the activity form.
}}
<div class="workflow">
    <h5>Approvals</h5>
    <table class="table">
        <tbody>
            {{#approvals}}
                <tr class="approval {{#canapprove}}is-approver{{/canapprove}}" data-id="{{id}}" data-status="{{status}}" data-type="{{type}}" data-skip="{{skip}}">
                    <td class="cell c-type">
                        {{#isapprover}}{{#canskip}}
                            <a href="#" class="action-skip" data-skip="{{skip}}"><i class="fa fa-microphone" aria-hidden="true"></i></a>
                        {{/canskip}}{{/isapprover}}
                        {{description}}
                    </td>
                    <td class="cell c-photo">
                        {{#userphoto}}
                            <img class="round" title="{{#skip}}Skipped{{/skip}}{{^skip}}Approved{{/skip}} by {{username}}" src="{{{userphoto}}}">
                        {{/userphoto}}
                    </td>
                    <td class="cell c-status">
                        {{^canapprove}}
                            {{#statushelper.isapproved}}
                                <i class="fa fa-check" aria-hidden="true" title="Approved"></i>
                            {{/statushelper.isapproved}}
                            {{#statushelper.isrejected}}
                                <i class="fa fa-times" aria-hidden="true" title="Rejected"></i>
                            {{/statushelper.isrejected}}
                        {{/canapprove}}
                        {{#canapprove}}{{^skip}}
                            <input class="approve" type="checkbox" data-id="{{id}}" {{#status}}checked{{/status}}>
                        {{/skip}}{{/canapprove}}
                    </td>
                </tr>
            {{/approvals}}
        </tbody>
    </table>
</div>