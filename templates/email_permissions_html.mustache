{{!
    @template local_excursions/email_permissions_html

    Template for approval email html.

}}

<p>Dear {{parentname}},</p>

<p>The following activity requires your permission for {{studentname}} to attend.</p>

<!-- Intro text -->
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td>
            {{{extratext}}}
        </td>
    </tr>
    <tr> 
        <td height="20"></td> 
    </tr>
</table>

<!-- Details -->
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td>
            <table border="0" cellspacing="0" cellpadding="20">
                <tr>
                    <td style="border-radius: 3px;" bgcolor="#f0f4f6">
                        <div style="font-size: 15px;font-family: Helvetica, Arial, sans-serif;text-decoration: none;border-radius: 3px;display: block;">
                            <table border="0" cellspacing="0" cellpadding="0">
                                {{#activitydetails}}
                                    <tr><td>{{{activitydetails}}}</td></tr>
                                {{/activitydetails}}
                                {{^activitydetails}}
                                    {{>local_excursions/email_activity_details_html}}
                                {{/activitydetails}}
                            </table>
                        </div>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr> 
        <td height="20"></td> 
    </tr>
</table>

<!-- Action button -->
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td>
            <table border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td align="center" style="border-radius: 3px;" {{^buttonoverride}}bgcolor="#005b94"{{/buttonoverride}}>
                        {{#buttonoverride}}
                            {{{buttonoverride}}}
                        {{/buttonoverride}}
                        {{^buttonoverride}}
                            <a href="{{permissionsurl}}" target="_blank" style="font-size: 14px;font-weight: bold;font-family: Helvetica, Arial, sans-serif;color: #ffffff;text-decoration: none;border-radius: 3px;padding: 9px 13px;border: 1px solid #005b94;display: inline-block;">Click here to respond &rarr;</a>
                        {{/buttonoverride}}
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>

