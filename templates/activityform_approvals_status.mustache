{{!
    @template local_excursions/activityform_approvals_status

    View for the approvals section of the activity form.
}}
<div class="status" data-status="{{statushelper.status}}">
    {{#statushelper.inreview}}
        <i class="fa fa-clock-o" aria-hidden="true" title="{{#str}}status:waiting, local_excursions{{/str}}"></i>
        {{#str}}status:inreview, local_excursions{{/str}}
    {{/statushelper.inreview}}
    {{#statushelper.isapproved}}
        <i class="fa fa-check" aria-hidden="true" title="Approved"></i>
        {{#str}}status:approved, local_excursions{{/str}}
    {{/statushelper.isapproved}}
</div>