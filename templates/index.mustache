{{!
    @template local_excursions/index

    View template.
}}

<div class="local_excursions">
    {{#isstaff}}
        <div class="header">
            <a id="btn-activitycreate" class="btn btn-primary" href="{{activitycreateurl}}">{{# str }}activityform:create, local_excursions{{/ str }}</a>
        </div>
    {{/isstaff}}

    {{#noexcursions}}{{#str}} view:noactivities, local_excursions {{/str}}{{/noexcursions}}

    {{#useractivities.0}}
    <div class="list-activities user-activities">
        <h5>Your activities</h5>
        <small>Activities that you created.</small>
        <table class="table generaltable">
            {{>local_excursions/index_activities_head}}
            <tbody>
                {{#useractivities}}
                    {{>local_excursions/index_activity}}
                {{/useractivities}}
            </tbody>
        </table>
    </div>
    {{/useractivities.0}}

    {{#accompanyingactivities.0}}
    <br>
    <div class="list-activities accompanying-activities">
        <h5>Accompanying</h5>
        <small>Activities that you are in charge of, or accompanying.</small>
        <table class="table generaltable">
            {{>local_excursions/index_activities_head}}
            <tbody>
                {{#accompanyingactivities}}
                    {{>local_excursions/index_activity}}
                {{/accompanyingactivities}}
            </tbody>
        </table>
    </div>
    {{/accompanyingactivities.0}}

    {{#approveractivities.0}}
    <br>
    <div class="list-activities approver-activities">
        <h5>Workflow</h5>
        <small>Activities where you have a role in the approval workflow.</small>
        <table class="table generaltable">
            {{>local_excursions/index_activities_head}}
            <tbody>
                {{#approveractivities}}
                    {{>local_excursions/index_activity}}
                {{/approveractivities}}
            </tbody>
        </table>
    </div>
    {{/approveractivities.0}}

    
    {{#auditoractivities.0}}
    <br>
    <div class="list-activities auditor-activities">
        <h5>Auditor</h5>
        <small>A list of all activities for auditors of the system.</small>
        <table class="table generaltable">
            {{>local_excursions/index_activities_head}}
            <tbody>
                {{#auditoractivities}}
                    {{>local_excursions/index_activity}}
                {{/auditoractivities}}
            </tbody>
        </table>
    </div>
    {{/auditoractivities.0}}

    {{#parentactivities.0}}
    <br>
    <div class="list-activities parent-activities">
        <h5>Activities involving your child/ren</h5>
        <br>
        <table class="table generaltable">
            {{>local_excursions/index_activities_head}}
            <tbody>
                {{#parentactivities}}
                    {{>local_excursions/index_activity}}
                {{/parentactivities}}
            </tbody>
        </table>
    </div>
    {{/parentactivities.0}}

    {{#studentactivities.0}}
    <br>
    <div class="list-activities student-activities">
        <h5>Activites that you are participating in</h5>
        <br>
        <table class="table generaltable">
            {{>local_excursions/index_activities_head}}
            <tbody>
                {{#studentactivities}}
                    {{>local_excursions/index_activity}}
                {{/studentactivities}}
            </tbody>
        </table>
    </div>
    {{/studentactivities.0}}


</div>