{{!
    @template local_excursions/cal_date

    A timestamp rendered as a calendar icon.
}}
<div class="cal-date {{#issameday}}same-day{{/issameday}}">
    <div class="cal-month">{{month}}</div> 

    {{#year}}<div class="cal-year">{{year}}</div>{{/year}}

    <div class="cal-day">{{day}}</div> 

    <div class="cal-time">{{time}}</div>
</div>